@model IEnumerable<PTS.Data.Models.Person>

@{
    ViewData["Title"] = "Danh sách nhân sự";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách nhân sự</h1>
<br />
<p>
   <a asp-action="Create"> <input type="button" value="Thêm nhân viên" class="btn btn-primary" width="200px" /></a> 
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Tên nhân viên
            </th>
            <th>
                Email
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Chức vụ
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Url.Action("Details", new { id = item.UserId })">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TelephoneNo)
            </td>
            <td>
                @if(item.IsAdministrator)
                    {
                        <p style="color:black!important;">Project Manager</p>
                    }
                    else
                    {
                        <p style="color:black!important;">Nhân viên</p>
                    }
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UserId"> <input type="submit" value="Chỉnh sửa" class="btn btn-warning" /></a> 
                &nbsp&nbsp
                <a asp-action="Delete" asp-route-id="@item.UserId"> <input type="submit" value="Xóa" class="btn btn-danger" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
