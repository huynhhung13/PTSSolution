@model PTS.Data.Models.Person

@{
    ViewData["Title"] = "Thêm nhân viên";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Thêm nhân viên</h1>
<hr />
@using (Html.BeginForm())   
{  
    @Html.AntiForgeryToken()  
      
    <div class="form-horizontal">  
        <hr />  
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })  
  
       <div class="form-group">
                <label class="control-label">Tên nhân viên</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
        <div class="form-group">
                <label class="control-label">Tài khoản</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Mật khẩu</label>
                <input asp-for="Password" class="form-control"  />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Email</label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Số điện thoại</label>
                <input asp-for="TelephoneNo" class="form-control"/>
                <span asp-validation-for="TelephoneNo" class="text-danger"></span>
            </div>
        <div class="form-group">  
            <label class="control-label cold-md-2">Chức vụ</label>  
                <select asp-for="IsAdministrator" class="form-control" asp-items="@ViewBag.isAdmin"></select>  
                <span asp-validation-for="IsAdministrator" class="text-danger"></span>    
        </div> 
        <br>
        <div class="form-group">  
            <div class="col-md-offset-2 col-md-10">  
                <input type="submit" value="Tạo mới" class="btn btn-primary" width="200px" />  
            </div>  
        </div>  
    </div>  
}  

<br />
<div>
    <a asp-action="Index">Trờ về danh sách</a>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
