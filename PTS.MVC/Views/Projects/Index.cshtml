@model IEnumerable<PTS.Data.Models.Project>

@{
    ViewData["Title"] = "Danh sách dự án";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Danh sách dự án</h1>
<br />
<p>
   <a asp-action="Create"> <input type="button" value="Tạo mới" class="btn btn-primary" width="200px" /></a> 
</p>
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                Tên dự án
            </th>
            <th>
                Ngày bắt đầu dự kiến
            </th>
            <th>
                Ngày kết thúc dự kiến
            </th>
            <th>
                Trạng thái
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a href="@Url.Action("Details", new { id = item.ProjectId })">@Html.DisplayFor(modelItem => item.Name)</a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ExpectedEndDate)
            </td>
            <td>
                    @if(item.Completed)
                    {
                        <p style="color:black!important;">Đã hoàn thành</p>
                    }
                    else
                    {
                        <p style="color:black!important;">Chưa hoàn thành</p>
                    } 
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ProjectId"> <input type="submit" value="Chỉnh sửa" class="btn btn-warning" /></a> 
                &nbsp&nbsp
                <a asp-action="Delete" asp-route-id="@item.ProjectId"> <input type="submit" value="Xóa" class="btn btn-danger" /></a>
            </td>
        </tr>
}
    </tbody>
</table>
